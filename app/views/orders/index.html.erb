<p id="notice"><%= notice %></p>

<h1>Listing Orders</h1>

<table>
  <thead>
    <tr>
      <th>Freight price</th>
      <th>Freight type</th>
      <th>Payment method</th>
      <th>Status</th>
      <th>Delivery field1</th>
      <th>Delivery field2</th>
      <th>Delivery field3</th>
      <th>Delivery field4</th>
      <th>Delivery city</th>
      <th>Delivery state</th>
      <th>Created by</th>
      <th>Updated by</th>
      <th>Deactivated by</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @orders.each do |order| %>
      <tr>
        <td><%= order.freight_price %></td>
        <td><%= order.freight_type %></td>
        <td><%= order.payment_method %></td>
        <td><%= order.status %></td>
        <td><%= order.delivery_field1 %></td>
        <td><%= order.delivery_field2 %></td>
        <td><%= order.delivery_field3 %></td>
        <td><%= order.delivery_field4 %></td>
        <td><%= order.delivery_city %></td>
        <td><%= order.delivery_state %></td>
        <td><%= order.created_by %></td>
        <td><%= order.updated_by %></td>
        <td><%= order.deactivated_by %></td>
        <td><%= link_to 'Show', order %></td>
        <td><%= link_to 'Edit', edit_order_path(order) %></td>
        <td><%= link_to 'Destroy', order, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>


<section class="login-registration">
  <div class="row">
    <div class="col-md-5">
      <div class="field">
        <h2>Entrar</h2>
          
        <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <div class="form-inputs">
            <%= f.input :email, label: 'Email', required: false, autofocus: true %>
            <%= f.input :password, label: 'Senha', required: false %>
            <%= f.input :remember_me, label: 'Lembrar de mim', as: :boolean if devise_mapping.rememberable? %>
          </div>
        
          <div class="form-actions">
            <%= f.button :submit, 'Entrar', class: 'btn btn-primary' %>
          </div>
        <% end %>
      </div>
    </div>
    
    <div class="col-md-5 col-md-offset-2">
      <div class="field">
        <h2>Cadastro</h2>
        
        <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          <%= f.error_notification %>
        
          <div class="form-inputs">
            <%= f.input :email, label: 'Email', required: true, autofocus: true %>
            <%= f.input :password, label: 'Senha', required: true, hint: ("MÃ­nimo de #{@minimum_password_length} caracteres" if @validatable) %>
            <%= f.input :password_confirmation, label: 'Senha novamente', required: true %>
          </div>
        
          <div class="form-actions">
            <%= f.button :submit, 'Cadastrar', class: 'btn btn-primary' %>
          </div>
        <% end %>
        
        <%= render "site/auth/shared/links" %>
      </div>
    </div>
  </div>
</section>

<%= simple_form_for(@contact) do |f| %>
  <% if @contact.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@contact.errors.count, "error") %> prohibited this page from being saved:</h2>

      <ul>
      <% @contact.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.input :name, label: 'Nome', input_html: { class: 'form-control' } %>
  </div>

  <div class="form-group">
    <%= f.input :email, label: 'Email', input_html: { class: 'form-control' } %>
  </div>

  <div class="form-group">
    <%= f.input :subject, label: 'Assunto', input_html: { class: 'form-control' } %>
  </div>

  <div class="form-group">
    <%= f.input :message, label: 'Mensagem', as: :text, input_html: { class: 'form-control', 'rows' => '10' } %>
  </div>
<% end %>

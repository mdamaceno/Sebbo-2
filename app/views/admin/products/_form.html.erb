<div class="col-md-12">
<%= simple_form_for([:admin, @product]) do |f| %>
  <% if @product.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@product.errors.count, "error") %> prohibited this product from being saved:</h2>
      <ul>
      <% @product.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="row">
    <div class="form-group">
      <div class="col-sm-12 col-md-10">
        <%= f.input :name, label: 'Nome' %>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="form-group">
      <div class="col-sm-12 col-md-4">
        <%= f.association :category, label: 'Categoria' %>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="form-group">
      <div class="col-sm-12 col-md-4">
        <%= f.input :cover, label: 'Imagem' %>
        <%= image_tag(@product.cover.thumb) if @product.cover? %>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="form-group">
      <div class="col-sm-12 col-md-10">
        <%= f.input :description, label: 'Descrição', as: :ckeditor %>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="form-group">
      <div class="col-sm-12 col-md-2">
        <%= f.input :price, label: 'Preço' %>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="form-group">
      <div class="col-sm-12 col-md-2">
        <%= f.input :stock, label: 'Estoque' %>
      </div>
    </div>
  </div>
  <!-- <div class="form-group"> -->
    <%#= f.association :subcategory, label: 'Subcategoria' %>
  <!-- </div> -->
  <div class="row">
    <div class="form-group">
      <div class="col-sm-12 col-md-4">
        <%= f.association :user, label: 'Usuário' %>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="form-group">
      <div class="col-sm-12 col-md-2">
        <%= f.input :active, label: 'Ativo', as: :boolean %>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="form-group">
      <div class="col-sm-2">
        <%= f.button :submit, 'Salvar', class: 'btn-primary' %>
      </div>
    </div>
  </div>
<% end %>
</div>

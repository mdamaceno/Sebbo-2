<p id="notice"><%= notice %></p>

<p><%= link_to 'Nova página', admin_new_page_path, class: 'btn btn-primary' %></p>

<div class="row">
  <div class="col-lg-12">
    <div class="panel panel-default">
      <div class="panel-body">
        <table class="datatable table table-hover display">
          <thead>
            <tr>
              <th width="10">ID</th>
              <th>Título</th>
              <th width="20">Ativo</th>
              <th width="10"></th>
              <th width="10"></th>
              <th width="10"></th>
            </tr>
          </thead>
        
          <tbody>
            <% @pages.each do |page| %>
              <tr>
                <td><%= page.id %></td>
                <td><%= page.title %></td>
                <td><%= page.active ? "Ativo" : "Inativo" %></td>
                <td><%= link_to 'Ver', admin_page_path(page), class: 'btn btn-xs btn-primary' %></td>
                <td><%= link_to 'Editar', admin_edit_page_path(page), class: 'btn btn-xs btn-primary' %></td>
                <td><%= link_to 'Excluir', admin_page_path(page), class: 'btn btn-xs btn-danger', method: :delete, data: { confirm: 'Tem certeza que quer excluir?' } %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>

<% content_for :title_breadcrumb do %>
  <section class="content-header">
    <h1>
      Páginas
      <small>Listagem das páginas</small>
    </h1>
    <%= render 'breadcrumb' %>
  </section>
<% end %>

<p id="notice"><%= notice %></p>

<p><%= link_to 'Novo código de desconto', admin_new_discount_path, class: 'btn btn-primary' %></p>

<div class="row">
  <div class="col-lg-12">
    <div class="panel panel-default">
      <div class="panel-body">
        <table class="datatable table table-hover display">
          <thead>
            <tr>
              <th width="10">ID</th>
              <th>Código</th>
              <th>Valor</th>
              <th width="10"></th>
            </tr>
          </thead>
        
          <tbody>
            <% @discounts.each do |discount| %>
              <tr>
                <td><%= discount.id %></td>
                <td><code><%= discount.code %></code></td>
                <% if discount.type_d == 'Porcentagem' %>
                  <td><%= discount.value %>%</td>
                <% else %>
                  <td><%= number_to_currency(discount.value, unit: 'R$', separator: ",", delimiter: "") %></td>
                <% end %>
                <td><%= link_to 'Excluir', admin_discount_path(discount), class: 'btn btn-xs btn-danger', method: :delete, data: { confirm: 'Tem certeza que quer excluir?' } %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>

<% content_for :title_breadcrumb do %>
  <section class="content-header">
    <h1>
      Descontos
      <small>Listagem de descontos</small>
    </h1>
    <%= render 'breadcrumb' %>
  </section>
<% end %>

<p id="notice"><%= notice %></p>

<h1>Listing Addresses</h1>

<table>
  <thead>
    <tr>
      <th>Field1</th>
      <th>Field2</th>
      <th>Field3</th>
      <th>Field4</th>
      <th>City</th>
      <th>State</th>
      <th>Postalcode</th>
      <th>User</th>
      <th>Created by</th>
      <th>Updated by</th>
      <th>Deactivated by</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @addresses.each do |address| %>
      <tr>
        <td><%= address.field1 %></td>
        <td><%= address.field2 %></td>
        <td><%= address.field3 %></td>
        <td><%= address.field4 %></td>
        <td><%= address.city %></td>
        <td><%= address.state %></td>
        <td><%= address.postalcode %></td>
        <td><%= address.user %></td>
        <td><%= address.created_by %></td>
        <td><%= address.updated_by %></td>
        <td><%= address.deactivated_by %></td>
        <td><%= link_to 'Show', address %></td>
        <td><%= link_to 'Edit', edit_address_path(address) %></td>
        <td><%= link_to 'Destroy', address, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>


<div class="col-md-12">
<%= simple_form_for(@product) do |f| %>
  <% if @product.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@product.errors.count, "error") %> prohibited this product from being saved:</h2>

      <ul>
      <% @product.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.input :name, label: 'Nome' %>
  </div>
  <div class="form-group">
    <%= f.input :price, label: 'Preço' %>
  </div>
  <div class="form-group">
    <%= f.input :cover, label: 'Imagem' %>
  </div>
  <div class="form-group">
    <%= f.input :description, label: 'Descrição' %>
  </div>
  <div class="form-group">
    <%= f.input :stock, label: 'Estoque' %>
  </div>
  <div class="form-group">
    <%= f.input :category, label: 'Categoria' %>
  </div>
  <div class="form-group">
    <%= f.input :subcategory, label: 'Subcategoria' %>
  </div>
  <div class="form-group">
    <%= f.input :user, label: 'Usuário' %>
  </div>
  <div class="form-group">
    <%= f.input :active, label: 'Status', as: :boolean %>
  </div>
  <%= f.button :submit, 'Salvar', class: 'btn-primary' %>
<% end %>
</div>
